alias coords="CoreLocationCLI -once | perl -pe '"'s/^<\+?(\-?[\d\.]+),\s*(\-?[\d\.]+).*$/$1, $2/i'"'"
alias freshe='fresh && history -c && exit'
alias gl='gls -AGhlqU -T4 --file-type --color=auto'
alias l='ls -Abhlpf'
alias lh='ls -Ablpf'
alias l@='l -@'
alias mac='mac.sh'

# TextMate integration
type mate &>/dev/null && {
	alias mate='mate -r'
	alias m='mate'
}

